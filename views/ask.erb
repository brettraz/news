<!doctype html>
<html lang="en">
  <head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <!-- Google Fonts -->
    <!-- Swap out "Roboto" for the font(s) you want to use -->
    <link href="https://fonts.googleapis.com/css?family=Roboto&display=swap" rel="stylesheet">
    
    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.12.0/css/all.css" crossorigin="anonymous">

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
  

    <!-- Your own CSS -->
    <link rel="stylesheet" href="/stylesheet.css">

    

    
                <title>News</title>
  </head>
  <body>
    <nav class="navbar navbar-expand-lg navbar-light">
        <div class="container">
            <a class="navbar-brand" href="#">
        </div>
    </nav>
        <div class="jumbotron jumbotron-fluid">
            <div class="container">
                <h1 class="display-1">Weather & News</h1 class="display-1">
            </div>
        </div>
        <div class="container">
            <div class="row mt-4">
                <div class="col-sm-4 text-center">    
                    <h1>Weather</h1>
                        
                            <ul> 
                                The latitude is <%= @forecast["latitude"] %> and the longitude is <%= @forecast["longitude"] %>.
                            </ul>
                            <ul>
                                It is currently <%= @forecast["currently"]["temperature"] %> degrees and <%= @forecast["currently"]["summary"] %>.
                            </ul>
                            <ul>
                                 The chances of precipitation today are <%= @forecast["daily"]["data"][0]["precipProbability"] * 100 %> percent with current winds of <%= @forecast["currently"]["windSpeed"] %> mph.
                            </ul>
                        
                </div>
            </div>
            <div class="row mt-4">
                <div class="col-sm-4 text-center">  
                    <h2>  Extended Daily Forecast </h2>
                        <ul>
                        <% for projection in @forecast["daily"]["data"] %>
                            <li>
                            The temps are expected to range between a high of <%= projection["temperatureMax"] %> degrees and a low of <%= projection["temperatureMin"] %> degrees and <%= projection["summary"] %>.
       
                            </li>
                            <% end %>
                        </ul>
                </div>
            </div>
            <div class="row mt-4">
                <div class="col-sm-10 text-left">
        
            
                    <h3> News Data</h3>
  

                        <ul>
                            <% for item in @news["articles"] %>
                            <li>
      
                            <a href="<%= item["url"] %>"><%= item["title"] %></a>
                            </li>
                            <% end %>
                        </ul>

                </div>
            </div>
        </div>
    

    <!-- Optional JavaScript -->
    <!-- jQuery first, then Popper.js, then Bootstrap JS -->
    <script src="https://code.jquery.com/jquery-3.4.1.slim.min.js" integrity="sha384-J6qa4849blE2+poT4WnyKhv5vZF5SrPo0iEjwBvKU7imGFAV0wwj1yYfoRSJoZ+n" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js" integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js" integrity="sha384-wfSDF2E50Y2D1uUdj0O3uMBJnjuUD4Ih7YwaYd1iqfktj0Uod8GCExl3Og8ifwB6" crossorigin="anonymous"></script>
  </body>
</html>